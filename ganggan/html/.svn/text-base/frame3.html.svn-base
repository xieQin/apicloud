<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
    <title>frame3</title>
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <link rel="stylesheet" type="text/css" href="../css/common.css" />
    <style>
    	html,body,div{
			margin: 0;
			padding: 0;
		}
		body {
			width:100%;
			height:100%;
		}
		/*#wrap {height: auto;}*/
		.wrap {
			height: 100%;
			display: -webkit-box;
            display: -webkit-flex;
            display: flex;
            -webkit-box-orient: vertical;
            -webkit-flex-flow: column;
            flex-flow: column;
		}
		#main {
			width:100%;
			background: url('../res/bg.png') no-repeat;
			background-size: cover;
			-webkit-box-flex: 1;
            -webkit-flex: 1;
            flex: 1;
		}
		.main-area {
			display: inline-block;
			margin-top:40%;
			width: 100%;
		}
		#main .main-img {
			width:23%;
			float:left;
			margin:5%;
		}
		#main img {
			width: 75px;
			margin: 0 auto;
		}
		#footer {
            width: 100%;
            text-align: center;
            height: 56px;
            line-height: 55px;
            background-color: #f2f2f2;
        }
		#footer img {
			margin-top:18px;
			width:25px;
		}
		.img-effect  {
            -webkit-transform-style: preserve-3d;
            transform-style: preserve-3d;
            -webkit-transform-origin: 0% 0%;
            transform-origin: 0% 0%;
            -webkit-transform: rotateX(-80deg);
            transform: rotateX(-80deg);
            -webkit-animation: flip 1.2s ease-in-out forwards;
            animation: flip 1.2s ease-in-out forwards;
        }

        @-webkit-keyframes flip {
            0% { }
            100% { -webkit-transform: rotateX(0deg); opacity: 1; }
        }

        @keyframes flip {
            0% { }
            100% { -webkit-transform: rotateX(0deg); transform: rotateX(0deg); opacity: 1; }
        }
    </style>
</head>
<body>
	<div id="wrap">
	    <div id="main">
	    	<div class="main-area">
	    		<div class="main-img">
	    			<img class="img-effect" src="../res/tianjia_bt1.png" alt="" onclick="openPublish()"/>
	    		</div>
	    		<div class="main-img">
	    			<img class="img-effect" src="../res/tianjia_bt2.png" alt="" onclick="openPublish()"/>
	    		</div>
	    		<div class="main-img">
	    			<img class="img-effect" src="../res/tianjia_bt3.png" alt="" onclick="openPublish()"/>
	    		</div>
	    		<div class="main-img">
	    			<img class="img-effect" src="../res/tianjia_bt4.png" alt="" onclick="openPublish()"/>
	    		</div>
	    		<div class="main-img">
	    			<img class="img-effect" src="../res/tianjia_bt5.png" alt="" onclick="openPublish()"/>
	    		</div>
	    	</div>
	    </div>
    	<div id="footer">
    		<img src="../res/38x38.png" alt="退出" onclick="closePublish();"/>
    	</div>
	</div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript">
	var openPublish = function(){
		api.openWin({
            name: 'publishStory',
            url: 'publish/publish.html',
            pageParam: {
                name: 'publishStory',
            },
            animation: {
                type: 'movein',
                subType: 'from_right',
                duration: 300
            }
        });
	}
	var closePublish = function(){
		api.closeWin();
	};
	apiready = function(){
		
	};
</script>
</html>